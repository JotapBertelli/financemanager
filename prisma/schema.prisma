// Prisma Schema - Finance Manager
// Gerado para aplicação de gestão financeira pessoal

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Usuário
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relacionamentos
  expenses               Expense[]
  fixedExpenses          FixedExpense[]
  incomes                Income[]
  investmentGoals        InvestmentGoal[]
  futureInvestments      FutureInvestmentSimulation[]
  categories             Category[]
  accounts               Account[]
  sessions               Session[]

  @@map("users")
}

// Modelo para NextAuth - Accounts
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Modelo para NextAuth - Sessions
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Categoria personalizada
model Category {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#8b5cf6")
  icon      String?
  type      CategoryType @default(EXPENSE)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses Expense[]
  fixedExpenses FixedExpense[]

  @@unique([name, userId])
  @@map("categories")
}

// Tipo de categoria
enum CategoryType {
  EXPENSE
  INCOME
}

// Despesas (gastos variáveis)
model Expense {
  id          String      @id @default(cuid())
  name        String
  description String?
  amount      Float
  date        DateTime
  type        ExpenseType @default(VARIABLE)
  categoryId  String?
  userId      String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([userId, date])
  @@map("expenses")
}

// Tipo de despesa
enum ExpenseType {
  FIXED
  VARIABLE
}

// Gastos fixos recorrentes
model FixedExpense {
  id          String            @id @default(cuid())
  name        String
  description String?
  amount      Float
  dueDay      Int              // Dia do vencimento (1-31)
  frequency   ExpenseFrequency @default(MONTHLY)
  categoryId  String?
  isActive    Boolean          @default(true)
  userId      String
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@map("fixed_expenses")
}

// Frequência de despesa fixa
enum ExpenseFrequency {
  WEEKLY
  MONTHLY
  YEARLY
}

// Receitas
model Income {
  id          String     @id @default(cuid())
  name        String
  description String?
  amount      Float
  date        DateTime
  type        IncomeType @default(SALARY)
  isRecurring Boolean    @default(false)
  userId      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@map("incomes")
}

// Tipo de receita
enum IncomeType {
  SALARY        // Salário
  FREELANCE     // Trabalho freelance
  INVESTMENT    // Rendimento de investimento
  BONUS         // Bônus
  GIFT          // Presente
  EXTRA         // Extra
  OTHER         // Outros
}

// Metas de investimento
model InvestmentGoal {
  id             String   @id @default(cuid())
  name           String
  description    String?
  targetAmount   Float    // Valor desejado
  currentAmount  Float    @default(0) // Valor já investido
  deadline       DateTime // Prazo
  priority       Int      @default(1) // Prioridade (1-5)
  isCompleted    Boolean  @default(false)
  userId         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("investment_goals")
}

// Simulação de investimentos futuros
model FutureInvestmentSimulation {
  id                 String       @id @default(cuid())
  name               String
  initialAmount      Float        // Valor inicial
  monthlyContribution Float       // Aporte mensal
  interestRate       Float        // Taxa de juros (% ao ano)
  interestType       InterestType @default(COMPOUND)
  periodMonths       Int          // Período em meses
  projectedAmount    Float?       // Valor projetado calculado
  userId             String
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("future_investment_simulations")
}

// Tipo de juros
enum InterestType {
  SIMPLE
  COMPOUND
}

